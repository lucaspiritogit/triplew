        <h1>Spinner</h1>
      <div class="spinnerContainer">
        <div class="spinner"></div>
      </div>
      
      <pre>
            <code class="language-css">
              .spinner {
                border: 4px solid rgba(0, 0, 0, 0.1);
                width: 36px;
                height: 36px;
                border-radius: 50%;
                border-left-color: #09f;

              
                animation: spin 1s ease infinite;
              }
              
              @keyframes spin {
                0% {
                  transform: rotate(0deg);
                }
              
                100% {
                  transform: rotate(360deg);
                }
              }
              

            </code>
          </pre>
